// http://eslint.org/docs/rules/
{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": true,
            "classes": true
        }
    },
    "plugins": [
        "react"
    ],
    "env": {
        "browser": true,
        "mocha": true,
        "node": true,
        "es6": true
    },
    "globals": {
        "after": true,
        "afterEach": true,
        "before": true,
        "beforeEach": true,
        "describe": true,
        "it": true,
        "sinon": true,
        "require": true
    },
    "rules": {
        "brace-style": [2, "1tbs", {"allowSingleLine": true}],
        "camelcase": [2, {"properties": "never"}],
        "comma-dangle": [2, "never"],
        "comma-style": [2, "last"],
        "consistent-this": [2, "self"],
        "curly": [2, "all"],
        "eqeqeq": 0,
        "indent": [2, 4, {"SwitchCase": 1}],
        "jsx-quotes": [2, "prefer-double"],
        "key-spacing": 0,
        "keyword-spacing": 2,
        "lines-around-comment": [2, {"afterBlockComment": false, "afterLineComment": false}],
        "max-depth": [2, 3],
        "max-len": [2, 140, 4, {"ignoreComments": true, "ignoreUrls": true}],
        "max-nested-callbacks": [2, 3],
        "max-params": [2, 5],
        "new-cap": 2,
        "newline-after-var": [2, "always"],
        "no-bitwise": 2,
        "no-caller": 2,
        "no-dupe-keys": 2,
        "no-empty": 2,
        "no-mixed-spaces-and-tabs": 2,
        "no-multi-spaces": 0,
        "no-multiple-empty-lines": 2,
        "no-new": 2,
        "no-trailing-spaces": 2,
        "no-undef": 2,
        "no-unused-vars": 2,
        "no-use-before-define": [2, "nofunc"],
        "one-var": [2, {"initialized": "never"}],
        "operator-linebreak": [2, "after"],
        "quotes": [2, "single"],
        "react/jsx-closing-bracket-location": [2, {"location": "after-props"}],
        "react/jsx-curly-spacing": [2, "never"],
        "react/jsx-indent-props": [2, 4],
        "react/jsx-max-props-per-line": [2, { "maximum": 5 }],
        "react/jsx-no-duplicate-props": [2, { "ignoreCase": true }],
        "react/jsx-no-undef": 2,
        "react/jsx-uses-react": 2,
        "react/jsx-uses-vars": 2,
        "react/no-deprecated": [2, {"react": "0.14.7"}],
        "react/no-did-mount-set-state": [2, "allow-in-func"],
        "react/no-did-update-set-state": [2, "allow-in-func"],
        "react/no-direct-mutation-state": 2,
        "react/no-multi-comp": [2, { "ignoreStateless": true}],
        "react/no-unknown-property": 2,
        "react/prop-types": 2,
        "react/react-in-jsx-scope": 2,
        "react/self-closing-comp": 2,
        "react/sort-comp": 2,
        "react/wrap-multilines": 2,
        "semi": [2, "always"],
        "semi-spacing": [2, {"before": false, "after": true}],
        "space-before-blocks": [2, "always"],
        "space-infix-ops": 2,
        "space-return-throw-case": 0,
        "strict": [2, "global"],
        "valid-jsdoc": 2,
        "yoda": [2, "never"],
    }
}
